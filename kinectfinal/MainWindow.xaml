            <Label Content="null" HorizontalAlignment="Left" Height="35" Margin="645,332,-87,0" VerticalAlignment="Top" Width="82" FontSize="20" Name="Times"/>
            <Label Content="times:" HorizontalAlignment="Left" Height="27" Margin="645,317,-72,0" VerticalAlignment="Top" Width="67"/>
            <Label Content="null" HorizontalAlignment="Left" Height="35" Margin="645,292,-87,0" VerticalAlignment="Top" Width="82" FontSize="20" x:Name="Delta"/>
            <Label Content="delta:" HorizontalAlignment="Left" Height="27" Margin="645,279,-72,0" VerticalAlignment="Top" Width="67"/>
        </Grid>
    </Viewbox>
</Window>
